    <script>
        function showResult() {
            const form = document.getElementById('decisionForm');
            const result = document.getElementById('result');
            const title = document.getElementById('resultTitle');
            const description = document.getElementById('resultDescription');

            const prazo = form.prazo.value;
            const orcamento = form.orcamento.value;
            const experiencia = form.experiencia.value;
            const complexidade = form.complexidade.value;
            const resistencia = form.resistencia.value;

            if (!prazo || !orcamento || !experiencia || !complexidade || !resistencia) {
                alert('Por favor, responda todas as perguntas!');
                return;
            }

            let estrategia = '';
            let corClasse = '';
            let desc = '';

            if (prazo === 'urgente' || orcamento === 'limitado' || experiencia === 'inexperiente') {
                estrategia = 'Consultoria Externa';
                corClasse = 'result-consultoria';
                desc = 'Recomendamos contratar uma consultoria especializada para acelerar e qualificar o processo.';
            } else if (experiencia === 'experiente' && complexidade !== 'alta') {
                estrategia = 'Equipe Interna';
                corClasse = 'result-interno';
                desc = 'Sua equipe possui experi√™ncia e pode liderar a mudan√ßa com efici√™ncia.';
            } else {
                estrategia = 'Modelo H√≠brido';
                corClasse = 'result-hibrido';
                desc = 'Uma combina√ß√£o de equipe interna com apoio externo pode ser ideal para garantir o sucesso.';
            }

            result.className = 'result-container ' + corClasse;
            title.textContent = estrategia;
            description.textContent = desc;
            result.style.display = 'block';
        }
    </script>

